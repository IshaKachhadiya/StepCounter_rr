<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/wlcm_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_60sdp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Welcome Back"
                        android:textColor="@color/black_33"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/txt_rndm_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_extrabold"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="1000"
                        android:textColor="@color/btn_dg_color"
                        android:textSize="@dimen/_22ssp"
                        app:drawableStartCompat="@drawable/coins" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/line" />

                    <com.airbnb.lottie.LottieAnimationView
                        app:lottie_rawRes="@raw/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bonus_coin"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/btn_dg"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_claim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="Claim "
                        android:textColor="@color/white_F5"
                        android:textSize="@dimen/_12ssp"
                        app:drawableLeftCompat="@drawable/ic_youtube" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_no_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="No, Thanks"
                    android:textColor="@color/gray_73"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </RelativeLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/gift_lo"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_centerHorizontal="true"
            app:lottie_rawRes="@raw/gift"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    </RelativeLayout>
</RelativeLayout>
