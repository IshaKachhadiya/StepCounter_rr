<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#EDEDED" android:endColor="#EDEDED" android:angle="-90" android:centerColor="#EDEDED"/>
            <size android:height="15dp" android:width="15dp"/>
            <corners android:radius="6dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <layer-list>
                <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
                    <shape>
                        <gradient android:startColor="#15C2CD" android:endColor="#15C2CD" android:angle="-90" android:centerColor="#15C2CD"/>
<!--                        <size android:height="15dp" android:width="15dp"/>-->
                        <corners android:radius="4dp"/>
                    </shape>
                </item>
            </layer-list>
        </clip>
    </item>
</layer-list>
